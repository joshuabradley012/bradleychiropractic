// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id         String   @id @unique @default(uuid())
  email      String   @unique
  subscribed Boolean
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
